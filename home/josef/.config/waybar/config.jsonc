    //    },
    //    "escape": true,
    //    "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
    //}
    "custom/clock": {
        "exec": "~/.config/i3blocks/c-rewrite/clock-waybar.out",
        "return-type": "json"
    },

    "mpris": {
        "format": "{player_icon} {status_icon} {title} ‚Äì {artist}",
        "format-paused": "{status_icon} <i>{title} ‚Äì {artist}</i>",
        "player-icons": {
            "default": "üéµ",
            "firefox": "Û∞àπ",
            "mpv": "ÔçÆ "
        },
        "status-icons": {
            "default": "‚ñ∂",
            "paused": "‚è∏"
        }
    }
}
