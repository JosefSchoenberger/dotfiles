#!/bin/sh

# Dependencies: date

hour=$(date +%H)

case $hour in
	00|12) clk="ğŸ•›" ;;
	01|13) clk="ğŸ•" ;;
	02|14) clk="ğŸ•‘" ;;
	03|15) clk="ğŸ•’" ;;
	04|16) clk="ğŸ•“" ;;
	05|17) clk="ğŸ•”" ;;
	06|18) clk="ğŸ••" ;;
	07|19) clk="ğŸ•–" ;;
	08|20) clk="ğŸ•—" ;;
	09|21) clk="ğŸ•˜" ;;
	10|22) clk="ğŸ•™" ;;
	11|23) clk="ğŸ•š" ;;
esac

echo $clk
exit 0
	 
